{
  "monitor": {
    "enabled": true,
    "check_interval_seconds": 10,
    "log_file": "logs/render_monitor.log",
    "notification": {
      "enabled": false,
      "webhook_url": "",
      "notify_on_complete": true,
      "notify_on_error": true
    }
  },
  "rendering": {
    "output_base_path": "e:/WorldDataPipeline/output",
